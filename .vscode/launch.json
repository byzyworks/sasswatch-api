{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch API (Cleanup)",
            "program": "${workspaceFolder}/app/dist/index.js",
            "args": "--debug",
            "preLaunchTask": "npm: compile - app",
            "cwd": "${workspaceFolder}/",
            "outputCapture": "std",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch API (No Cleanup)",
            "program": "${workspaceFolder}/app/dist/index.js",
            "args": "--debug",
            "preLaunchTask": "npm: build - app",
            "cwd": "${workspaceFolder}/",
            "outputCapture": "std",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}